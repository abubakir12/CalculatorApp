<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackgraundColor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginHorizontal="16dp"
        android:textAlignment="textEnd"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="2 + 2 = 5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="507dp"
        android:layout_marginBottom="-32dp"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="?attr/calculatorBackgraundColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="48dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="?attr/buttonBackgraundColor"
                app:cardCornerRadius="40dp"
                app:cardMaxElevation="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/ac_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="AC"
                        android:textAlignment="center"
                        android:textSize="21sp" />


                    <TextView
                        android:id="@+id/del_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="Del"
                        android:textAlignment="center"
                        android:textSize="21sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/one_button"
                    style="@style/CalculatorButtonStyle"
                    android:text="1" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/second_button"
                    style="@style/CalculatorButtonStyle"
                    android:text="2" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/third_button"
                    style="@style/CalculatorButtonStyle"
                    android:text="3" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fourth_button"
                    style="@style/CalculatorButtonStyle"
                    android:text="4" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fifte_button"
                    style="@style/CalculatorButtonStyle"
                    android:text="5" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/six_button"
                    style="@style/CalculatorButtonStyle"
                    android:text="6" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/seven_button"
                    style="@style/CalculatorButtonStyle"
                    android:text="7" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/eight_button"
                    style="@style/CalculatorButtonStyle"
                    android:text="8" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ninth_button"
                    style="@style/CalculatorButtonStyle"
                    android:text="9" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ziro_button"
                    style="@style/CalculatorButtonStyle"
                    android:layout_weight="2"
                    android:text="0" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/point_button"
                    style="@style/CalculatorButtonStyle"
                    android:text="." />

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="420dp"
            android:layout_gravity="end"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            app:cardBackgroundColor="?attr/buttonBackgraundColor"
            app:cardCornerRadius="40dp"
            app:cardMaxElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/divide_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="/"
                    android:textAlignment="center"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/x_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="x"
                    android:textAlignment="center"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/minuse_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="-"
                    android:textAlignment="center"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/pluse_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="+"
                    android:textAlignment="center"
                    android:textSize="21sp" />


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                app:cardBackgroundColor="?attr/buttonBackgraundColor"
                app:cardCornerRadius="100dp"
                app:cardMaxElevation="32dp">

                <TextView
                    android:id="@+id/equal_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="="
                    android:textAlignment="center"
                    android:textSize="21sp" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <ImageView
        android:id="@+id/theme_icon"
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/theme_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>